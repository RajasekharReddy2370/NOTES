<!-- jinja2_templates/user_profile.html -->
{% extends "base.html" %}

{% block content %}
    <h2>User Profile</h2>
    <p>Name: {{ user.name }}</p>
    <p>Joined: {{ user.joined_date | date("F j, Y") }}</p>

    <ul>
        {% for post in user.posts %}
            <li>{{ post.title }} - {{ post.date_posted | date("Y-m-d") }}</li>
        {% empty %}
            <li>No posts available.</li>
        {% endfor %}
    </ul>
{% endblock %}

